pipeline {
    agent any
     environment {
        DOCKERHUB_REPO = "caetanodevops/mentorr-backend"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
     }
    stages {
        stage("Build"){
            steps {
                script {
                    dockerapp = docker.build("mentorr-backend:${env.BUILD_NUMBER}")
                }
            }
        }

        stage("Registry"){
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
                        dockerImage.push("${IMAGE_TAG}")
                    }
                }
            }
        }
    }
}
