pipeline {
    agent any

    stages {
        stage("Build"){
            steps {
                script {
                    dockerapp = docker.build("caetanodevops/mentorr-backend:${env.BUILD_NUMBER}")
                }
            }
        }

        stage("Registry"){
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub'){
                        dockerapp.push()
                    }
                }
            }
        }
    }
}
